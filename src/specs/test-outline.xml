<project name="Ollie Tests" description="Test suite structure for the Ollie JPEG Encoder/Decoder">
    <structure>
        <directory name="test">
            <file name="ui.test.js" description="UI interaction tests." />
            <file name="runner.js" description="Node.js CLI test runner. Imports all test files and displays summary. Includes DOM mocks for UI tests." />
            <directory name="core" description="Unit tests for core algorithms">
                <file name="jpeg-encoder.test.js" description="Integration tests for the JpegEncoder class." />
                <file name="jpeg-decoder.test.js" description="Integration tests for the JpegDecoder class." />
                <directory name="encoder" description="Unit tests for encoder algorithms">
                    <file name="blocks.test.js" description="Tests for block padding and extraction." />
                    <file name="colorspace.test.js" description="Tests for RGB/YCbCr conversion." />
                    <file name="dct.test.js" description="Tests for Discrete Cosine Transform." />
                    <file name="huffman.test.js" description="Tests for Huffman coding logic." />
                    <file name="quantization.test.js" description="Tests for quantization tables and logic." />
                    <file name="zigzag.test.js" description="Tests for ZigZag reordering." />
                </directory>
                <directory name="decoder" description="Unit tests for decoder algorithms">
                    <file name="quantization-parser.test.js" description="Tests for DQT segment parsing." />
                    <file name="huffman-parser.test.js" description="Tests for DHT segment parsing." />
                    <file name="frame-parser.test.js" description="Tests for SOF0 frame header parsing." />
                    <file name="scan-parser.test.js" description="Tests for SOS scan header parsing." />
                    <file name="huffman-decoder.test.js" description="Tests for Huffman entropy decoding." />
                    <file name="inverse-zigzag.test.js" description="Tests for inverse zigzag reordering." />
                    <file name="dequantization.test.js" description="Tests for dequantization." />
                    <file name="idct.test.js" description="Tests for Inverse DCT." />
                    <file name="colorspace-decoder.test.js" description="Tests for YCbCr to RGB conversion." />
                    <file name="upsampling.test.js" description="Tests for chroma upsampling." />
                    <file name="block-assembly.test.js" description="Tests for block assembly." />
                </directory>
            </directory>
            <directory name="fixtures" description="Test JPEG files for decoder testing">
                <file name="generate-fixtures.js" description="Script to generate test JPEG files using the encoder." />
                <file name="README.md" description="Documentation for test fixtures." />
            </directory>
            <directory name="integration" description="Integration tests">
                <file name="roundtrip.test.js" description="Tests for encoder-decoder roundtrip compatibility." />
                <file name="real-files.test.js" description="Tests for decoding real JPEG files." />
            </directory>
            <directory name="utils" description="Test infrastructure and utility classes">
                <file name="test-runner.js" description="Unified test runner that works in both Node.js and browser environments. Exports describe/it/expect API.">
                    <function name="describe" params="name, fn" description="Defines a test suite." />
                    <function name="it" params="name, fn" description="Defines a test case." />
                    <function name="expect" params="actual" return="Matcher" description="Assertion matcher factory.">
                        <class name="Matcher">
                            <method name="toBe" params="expected" description="Asserts strict equality (===)." />
                            <method name="toEqual" params="expected" description="Asserts deep equality via JSON stringification." />
                            <method name="toBeCloseTo" params="expected, precision=2" description="Asserts number is close to expected within precision." />
                            <method name="toBeGreaterThan" params="expected" description="Asserts actual > expected." />
                            <method name="toBeLessThan" params="expected" description="Asserts actual < expected." />
                            <method name="toBeDefined" description="Asserts actual is not undefined." />
                        </class>
                    </function>
                    <function name="getStats" return="{total, passed, failed}" description="Returns test statistics (Node.js only)." />
                    <function name="resetStats" description="Resets test statistics (Node.js only)." />
                </file>
                <file name="test-runner-browser.js" description="Browser-specific test runner implementation (legacy, kept for reference)." />
                <file name="test-runner-node.js" description="Node-specific test runner implementation (unused, kept for reference)." />
            </directory>
        </directory>
    </structure>
</project>
